extends layouts/main

block content
    .form-container
        form(action=`${routes.videos}${routes.editVideo}`, method="post")
            input(type="text", placeholder="Title", name="title")
            input(type="text", placeholder="Description", name="description")
            input(type="submit", value="Update Video Information")
        a.form-container__link.form-container__link--delete(href=`${routes.videos}${routes.deleteVideo}`) Delete Video